                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Folowing"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
