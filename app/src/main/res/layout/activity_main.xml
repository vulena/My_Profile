            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Folower"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
